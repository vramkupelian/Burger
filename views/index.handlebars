<div class ="container"> 
    <div class ="top">
        <img class ="burger-img" src = "./assets/img/burger.jpg">
    </div>
    <div class ="ready-burgers">
        <h2> Burgers ready to eat:</h2>
        <ul>
            {{#each burgers}}
                {{#unless devoured}}
                    {{>burgers devoured=true}}
                {{/unless}}
            {{/each}}
        </ul>
    </div>

    <div class ="eaten-burgers">
        <h2>Burgers that reside in the belly:</h2>
        <ul>
            {{#each burgers}}
                {{#if devoured}}
                    {{>burgers devoured = false}}
                {{/if}}
            {{/each}}
        </ul>
    </div>

    <div class ="order-burger">
        <h2> Order a burger:</h2>
        <form class = "create-form">
            <div class = "form-group">
                <label for = "new_burger">Burger Name: </label>
                <input type = "text" id = "new_burger" name ="name">
            </div>

        <button type = "submit" class ="submit-btn">Add the Burger</button>
        </form>
    </div>
</div>  